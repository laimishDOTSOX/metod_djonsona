                <TextBox Grid.Column="9" BorderBrush="Black" BorderThickness="1" FontSize="30" TextAlignment="Center" VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged" Style="{DynamicResource TextBoxStyle1}"/>
